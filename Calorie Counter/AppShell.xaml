<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Calorie_Counter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Calorie_Counter"
    Shell.FlyoutBehavior="Disabled"
    Title="Calorie_Counter">

    <!--
    App shell is an opinionated shell of the applicaion
        below is an example of a content template, which are "lazily" uploaded wehn app loads up
    easily add flyout navigation, tabs, tab item, menu items, etc. 
    -->
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" /> <!-- main route -->

</Shell>
